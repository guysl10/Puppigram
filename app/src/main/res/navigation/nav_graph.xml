<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/tabBarFragment">
    <fragment
        android:id="@+id/tabBarFragment"
        android:label="fragment_tab_bar"
        tools:layout="@layout/fragment_tab_bar">
        <action
            android:id="@+id/action_tabBarFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_tabBarFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_tabBarFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_tabBarFragment_to_uploadPostFragment"
            app:destination="@id/uploadPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/feedFragment"
        android:name="com.example.puppigram.fragments.FeedFragment"
        android:label="FeedFragment" />
    <fragment
        android:id="@+id/uploadPostFragment"
        android:name="com.example.puppigram.fragments.UploadPostFragment"
        android:label="UploadPostFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.puppigram.fragments.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.puppigram.fragments.ProfileFragment"
        android:label="ProfileFragment" />
</navigation>